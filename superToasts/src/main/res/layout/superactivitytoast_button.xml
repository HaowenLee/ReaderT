<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    style="@style/SuperActivityToast_Button_RootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal">

    <TextView
        android:id="@+id/message_textview"
        style="@style/SuperActivityToast_Button_TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <View
        android:id="@+id/divider"
        style="@style/SuperActivityToast_Button_Divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <Button
        android:id="@+id/button"
        style="@style/SuperActivityToast_Button_Button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/icon_dark_undo"
        android:text="UNDO"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

</LinearLayout>